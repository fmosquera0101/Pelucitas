<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_administrar_mi_negocio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="co.com.fredymosqueralemus.pelucitas.AdministrarMiNegocioActivity">
    <ImageView
        android:id="@+id/imagennegocio_activity_administrarminegocio"
        android:src="@drawable/ic_store_mall_directory_black_24dp"
        android:scaleType="centerCrop"
        android:layout_height="100dp"
        android:layout_width="match_parent" />
    <TextView
        android:id="@+id/nombrenegocio_activity_administrarminegocio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_minegocio"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/str_informacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/str_informacion"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/editar_informacionminegocio_activity_administrarminegocio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:onClick="editarInforamcionMiNegocio"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2">


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:columnCount="1">


                <TextView
                    android:id="@+id/nit_activity_administrarminegocio"
                    android:layout_height="wrap_content"
                    android:layout_width="180dp"
                    android:text="@string/str_nit"
                    />
                <TextView
                    android:id="@+id/telefono_activity_administrarminegocio"
                    android:layout_height="wrap_content"
                    android:layout_width="180dp"
                    android:text="@string/str_direccion"
                    />
                <TextView
                    android:id="@+id/tiponegocio_activity_administrarminegocio"
                    android:layout_height="wrap_content"
                    android:layout_width="180dp"
                    android:layout_alignParentRight="true"
                    android:text="Tipo negocio"
                    />

            </GridLayout>
        </GridLayout>
        <ImageView
            android:id="@+id/icono_indicadorderecho_activity_administrarminegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right_black_24dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/str_direccion"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:onClick="editarDireccionMiNegocio"
            >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">
                <ImageView
                    android:id="@+id/imgdireccion_activity_administrarminegocio"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_place_black_24dp"
                    />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="4"
                    android:columnCount="1">
                    <TextView
                        android:id="@+id/pasideptociudad_activity_administrarminegocio"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:text="pais, depto, ciudad"
                        />
                    <TextView
                        android:id="@+id/direccion_activity_administrarminegocio"
                        android:layout_height="wrap_content"
                        android:text="Direccion"
                        android:layout_width="180dp" />
                    <TextView
                        android:id="@+id/datosadicionales_activity_administrarminegocio"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:layout_alignParentRight="true"
                        android:text="Datos adicionales"
                        />
                    <TextView
                        android:id="@+id/barrio_activity_administrarminegocio"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:text="Barrio"
                        />


                </GridLayout>
            </GridLayout>
            <ImageView
                android:id="@+id/icono_indicadorderechoeditardireccion_activity_administrarminegocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_black_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/str_horario"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:onClick="editarHoararioMiNegocio"
            >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">
                <ImageView
                    android:id="@+id/imghorario_activity_administrarminegocio"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_today_black_24dp"
                    />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="4"
                    android:columnCount="1">
                    <TextView
                        android:id="@+id/diaslaborales_activity_administrarminegocio"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:text="dias laborales"
                        />
                    <TextView
                        android:id="@+id/horariolaboral_activity_administrarminegocio"
                        android:layout_height="wrap_content"
                        android:text="horario laboral"
                        android:layout_width="180dp" />



                </GridLayout>
            </GridLayout>
            <ImageView
                android:id="@+id/icono_indicadorderechoeditarhorario_activity_administrarminegocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_black_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/agregarempleado_activity_administrarminegocio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/str_agregarempleado"
        android:onClick="agregarEmpleado"/>

    <Button
        android:id="@+id/administraragenda_activity_administrarminegocio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/str_administraragenda"
        android:onClick="agregarEmpleado"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
