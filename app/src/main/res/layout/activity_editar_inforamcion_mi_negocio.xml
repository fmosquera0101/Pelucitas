<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="co.com.fredymosqueralemus.pelucitas.EditarInforamcionMiNegocioActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/imagen_miperfil_activity_editar_informacion_minegocio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:onClick="seleccionarImagenMiNegocio"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/editar_informacionminegocio_activity_editar_informacion_minegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:onClick="editarInformacionBasicaMiNegocio">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nombre_negocio_activity_editar_informacion_minegocio"
                        android:layout_height="20dp"
                        android:text="@string/str_minegocio"
                        android:layout_width="220dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/nit_negocio_activity_editar_informacion_minegocio"
                        android:layout_height="20dp"
                        android:text="@string/str_nit"
                        android:layout_width="220dp" />
                    <TextView
                        android:id="@+id/telefono_negocio_activity_editar_informacion_minegocio"
                        android:layout_height="20dp"
                        android:text="@string/str_telefono"
                        android:layout_width="220dp" />

                    <TextView
                        android:id="@+id/tipo_negocio_activity_editar_informacion_minegocio"
                        android:layout_height="20dp"
                        android:text="@string/str_tiponegocio"
                        android:layout_width="220dp" />

                </LinearLayout>
            </GridLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_editar_black_24dp"
               />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
