<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.com.fredymosqueralemus.pelucitas.AdministrarMiPerfilActivity">

    <ImageView
        android:id="@+id/imagenmiperfil_activity_administrarmiperfil"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:onClick="seleccionarImagenPerfil"/>
    <TextView
        android:id="@+id/nombreusuario_activity_administrarmiperfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi nombre"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:id="@+id/editar_informacionminegocio_activity_administrarmiperfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="2">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="1">
                        <TextView
                            android:id="@+id/correo_activity_administrarmiperfil"
                            android:layout_height="20dp"
                            android:text="@string/str_correo"
                            android:layout_width="220dp" />

                    </GridLayout>
                </GridLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:onClick="editarFechaNacimientoTelefono"
                >
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="2">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="1">
                        <TextView
                            android:layout_height="20dp"
                            android:text="@string/str_fechanacimientolabel"
                            android:layout_width="220dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/fechanacimiento_activity_administrarmiperfil"
                            android:layout_height="20dp"
                            android:text="@string/str_fechanacimiento"
                            android:layout_width="220dp" />
                        <TextView
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:text="@string/str_telefono"
                            android:layout_width="220dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/telefono_activity_administrarmiperfil"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:text="@string/str_telefono"
                            android:layout_width="220dp" />
                    </GridLayout>
                </GridLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:onClick="editarDireccionUsuario">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="2">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="1">

                        <TextView
                            android:layout_height="wrap_content"
                            android:text="@string/str_direccion"
                            android:layout_width="180dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/paisdeptociudad_activity_administrarmiperfil"
                            android:layout_height="wrap_content"
                            android:text="@string/str_localizacion"
                            android:layout_width="180dp" />
                        <TextView
                            android:id="@+id/direccion_activity_administrarmiperfil"
                            android:layout_height="wrap_content"
                            android:text="@string/str_direccion"
                            android:layout_width="180dp" />
                    </GridLayout>
                </GridLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_right_black_24dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            android:layout_marginTop="16dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:padding="16dp"
                android:rowCount="2">

                <RelativeLayout
                    android:id="@+id/relativeLayoutEditarPerfil_activity_administrarmiperfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:onClick="editarPerfilEmpleado"
                    >

                    <ImageView
                        android:id="@+id/icono_perfil_empleado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        />

                    <TextView
                        android:id="@+id/perfilempleado_textv_activity_administrarmiperfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/icono_perfil_empleado"
                        android:text="@string/srt_perfilempleado"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <CheckBox
                        android:id="@+id/perfilempleado_chkbx_activity_administrarmiperfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:enabled="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:onClick="editarPerfilAdministrador">

                    <ImageView
                        android:id="@+id/icono_perfil_administrador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        />

                    <TextView
                        android:id="@+id/perfiladministrdor_textv_activity_administrarmiperfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/icono_perfil_administrador"
                        android:text="@string/srt_perfiladministrador"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <CheckBox
                        android:id="@+id/perfiladministrador_chkbx_activity_administrarmiperfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:enabled="true"
                        />

                </RelativeLayout>

            </GridLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
</ScrollView>